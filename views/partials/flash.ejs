<% if(success && success.length) {%>
  <div class="alert alert-success alert-dismissible fade show text-center my-3 mx-3" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <strong>
      <%= success %>
    </strong>
  </div>
  <% } %>

    <% if(error && error.length) {%>
      <div class="alert alert-danger alert-dismissible fade show text-center my-3 mx-3" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <strong>
          <%= error %>
        </strong>
      </div>
      <% } %>